{
  "manifest_version": 2,

  "name": "Recode",
  "description": "Annotate an article and share your opinion",
  "version": "1.0",

   "content_scripts": [
     {
       "matches": ["http://*/*", "https://*/*"],
       "css": ["mystyles.css"],
       "js": ["contentScript.bundle.js"]
     }
   ],

  "background": {
    "scripts": ["prepPage.bundle.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "CLick to use Recode!"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "webNavigation",
    "contextMenus",
    "storage"
  ]
}